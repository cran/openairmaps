Type: Package
Package: openairmaps
Title: Create Maps of Air Pollution Data
Version: 0.9.1
Authors@R: c(
    person("Jack", "Davison", , "jack.davison@ricardo.com", role = c("cre", "aut"),
           comment = c(ORCID = "0000-0003-2653-6615")),
    person("David", "Carslaw", , "david.carslaw@york.ac.uk", role = "aut",
